{

  "manifest_version": 3,
  "name": "Obsidian Clipper",
  "version": "0.3",
  "description": "A tool to clip web pages into Obsidian.md",
  "developer": {
    "name": "ewestern",
    "url": "https://github.com/ewestern/obsidian-clipper"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "storage"
  ],
  "icons": {
    "48": "icons/clipper.png"
  },
  "browser_action": {
    "default_icon": {
      "48": "icons/clipper.png"
    },
    "default_title": "Clip to Obsidian",
    "default_popup": "popup.html"
  },
	"options_ui": {
		"page": "options.html",
		"browser_style": true,
		"chrome_style": true
	}
}
